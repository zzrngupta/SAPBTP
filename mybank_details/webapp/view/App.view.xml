<mvc:View controllerName="com.sap.mybankdetails.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    class="sapUiSizeCompact"
    >
    <App id="app">
        <Page id="page" title="{i18n>appTitle}">
            <headerContent>
                <Button id="demoBtn" type="Emphasized" text="{i18n>home}"/>
            </headerContent>
            <content>

                <!-- Bank Details Fragment -->
                <core:Fragment id="bankDetailsfragment"    
                fragmentName ="com.sap.mybankdetails.view.fragments.BankDetails" type="XML" />
                <!-- Card Details Fragment -->
               <core:Fragment id="cardDetailsfragment"    
                fragmentName ="com.sap.mybankdetails.view.fragments.CardDetails" type="XML" />
            </content>
        </Page>
    </App>
</mvc:View>